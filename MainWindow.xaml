<Window x:Name="SearchBar" x:Class="TakeMeTo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TakeMeTo"
        mc:Ignorable="d"
        Title="MainWindow" Height="50" Width="400" Background="#FF474747" WindowStyle="None" ResizeMode="NoResize" Loaded="SearchBar_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <tb:TaskbarIcon x:Name="TrayIcon"
                    Visibility="Visible"
                    ToolTipText="TakeMeTo"
                    MenuActivation="LeftOrRightClick" 
                    IconSource="/TrayIcon.png"
      />
        <Button Content="Button" HorizontalAlignment="Left" Height="0" Margin="99,146,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="120,22,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
    </Grid>

</Window>

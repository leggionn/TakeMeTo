<Window x:Name="SearchBar" x:Class="TakeMeTo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TakeMeTo"
        mc:Ignorable="d"
        Deactivated="App_Deactivated"
        Title="MainWindow" Height="50" Width="400"  WindowStyle="None" ResizeMode="NoResize" Loaded="SearchBar_Loaded" Background="Transparent" AllowsTransparency="True">
    <Border x:Name="Border" Background="#FF474747" CornerRadius="20">
        <Grid x:Name="RootGrid">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <tb:TaskbarIcon x:Name="TrayIcon"
                Visibility="Visible"
                ToolTipText="TakeMeTo"
                MenuActivation="LeftOrRightClick" 
                IconSource="/TrayIcon.png"
  />
            <Image x:Name="MainIco" Source="/SearchIcon.png" Margin="10,16,372,16" Width="18" Height="18"/>
            <TextBox x:Name="MainTB" HorizontalAlignment="Left" Margin="34,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="356" BorderThickness="0" BorderBrush="#FF474747" Foreground="White" SelectionBrush="#FF474747" FontSize="21" Background="#FF474747" KeyDown="TextBox_KeyDown" Height="50"/>
        </Grid>
    </Border>

</Window>
